{
  "name": "openclaw-app-idea-lab",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run serve:hub\" \"npm run dev:hub\"",
    "dev:hub": "npm --workspace ./apps/hub run dev",
    "serve:hub": "npm --workspace ./apps/hub run hub:serve",
    "build": "npm -ws run build --if-present",
    "test": "npm -ws run test --if-present",
    "lint": "npm -ws run lint --if-present",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx}": "eslint --fix"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "concurrently": "^9.2.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript-eslint": "^8.54.0"
  }
}
